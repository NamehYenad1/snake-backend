{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "rootDir": ".",  // Set rootDir to the common parent directory
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"  // Include tests files
  ],
  "exclude": [
    "node_modules"
  ]
}
